<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
  <persistence-unit name="SystemServicePU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>br.com.sgoa.Entidade.Estado</class>
    <class>br.com.sgoa.Entidade.Cidade</class>
    <class>br.com.sgoa.Entidade.Endereco</class>
    <class>br.com.sgoa.Entidade.Telefone</class>
    <class>br.com.sgoa.Entidade.Grupo</class>
    <class>br.com.sgoa.Entidade.Pessoa</class>
    <class>br.com.sgoa.Entidade.Marca</class>
    <class>br.com.sgoa.Entidade.Unidade</class>
    <class>br.com.sgoa.Entidade.Produto</class>
    <class>br.com.sgoa.Entidade.Compra</class>
    <class>br.com.sgoa.Entidade.Venda</class>
    <class>br.com.sgoa.Entidade.ItemCompra</class>
    <class>br.com.sgoa.Entidade.ItemVenda</class>
    <class>br.com.sgoa.Entidade.FormaPagamento</class>
    <class>br.com.sgoa.Entidade.Parcelas</class>
    <class>br.com.sgoa.Entidade.ParcelasCompra</class>
    <class>br.com.sgoa.Entidade.ParcelasVenda</class>
    <class>br.com.sgoa.Entidade.ReceberPagar</class>
    <class>br.com.sgoa.Entidade.Usuario</class>
    <class>br.com.sgoa.Entidade.Banco</class>
    <class>br.com.sgoa.Entidade.ContaBancaria</class>
<!--    <class>br.com.sgoa.Entidade.Material</class>-->
    <class>br.com.sgoa.Entidade.MovimentaFinanceiro</class>
    <exclude-unlisted-classes>false</exclude-unlisted-classes>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/databaseSGO"/>
      <property name="javax.persistence.jdbc.user" value="postgres"/>
      <property name="javax.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="javax.persistence.jdbc.password" value="postgres"/>
      <!--         <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>-->
      <property name="hibernate.hbm2ddl.auto" value="create-drop"/>
    </properties>
  </persistence-unit>
</persistence>
